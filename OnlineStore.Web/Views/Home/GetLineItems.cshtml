@model IEnumerable<OnlineStore.Web.Models.LineItemViewModel>

@{
    ViewBag.Title = "GetLineItems";
}

<h2>GetLineItems</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhoneViewModel.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PhoneViewModel.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderViewModel.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderViewModel.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.PhoneViewModel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneViewModel.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderViewModel.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderViewModel.Address)
            </td>
            
        </tr>
    }

</table>
