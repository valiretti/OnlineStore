@model IEnumerable<OnlineStore.Web.Models.OrderViewModel>

@{
    ViewBag.Title = "GetOrders";
}

<h2>GetOrders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOrder", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteOrder", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Информация", "GetLineItems", new { id = item.Id })

            </td>
        </tr>
    }
</table>

