@model IEnumerable<OnlineStore.Web.Models.PhoneViewModel>

@{
    ViewBag.Title = "GetPhones";
}


<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Files/Images/@item.ImagePath" height="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
            {

                <td>
                    @Html.ActionLink("Delete", "DeletePhone", new { id = item.Id })
                </td>
            }

            <td>
                <a class="add_item" data-id="@item.Id" href="#">Добавить в корзину</a>
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

